<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityViewFile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="top|center"
        android:orientation="vertical" >
        <EditText android:id="@+id/inputSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:hint="Search files.."
            android:inputType="textVisiblePassword"/>

        <ListView
            android:id = "@+id/myFilesList"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin="16dp"/>


        <Button
            android:id="@+id/generated_files_by_me"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginHorizontal="80dp"
            android:text="generated files by me"/>

        <Button
            android:id="@+id/app_disapp_files_by_me"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginHorizontal="80dp"
            android:text="approved/disapproved files by me"/>

        <Button
            android:id="@+id/my_plan_to_send_files"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginHorizontal="80dp"
            android:text="my plan to send files"/>

        <Button
            android:id="@+id/app_disapp_files_by_others"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginHorizontal="80dp"
            android:text=" my files approved/disapproved by others"/>

    </LinearLayout>

</LinearLayout>