<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorAccent">
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:background="@drawable/profile_image_background"></ImageView>

            <TextView
                android:id="@+id/profileName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/profileImage"
                android:textAlignment="center"
                android:textColor="@color/whiteTextColor"></TextView>

            <TextView
                android:id="@+id/hardCodedText_home"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/profileName"
                android:layout_marginTop="3dp"
                android:text="Current Role : None"
                android:textAlignment="center"
                android:textColor="@color/whiteTextColor"
                android:textSize="18sp"></TextView>
        </RelativeLayout>
        <Spinner
            android:id="@+id/role_selector"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:prompt="@string/spinner_prompt_home"
            android:spinnerMode="dropdown"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingBottom="250dp"
        android:orientation="vertical"
        android:gravity="bottom|center"
        android:layout_weight="1">

        <Button
            android:id="@+id/viewFiles_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#170"
            android:text="View Files"
            android:textColor="@color/whiteTextColor"
            android:textSize="20dp">

        </Button>

    </LinearLayout>
</LinearLayout>